<h1>Burgers!</h1>

<h2>Burgers not eaten yet!</h2>

<ul>
{{#each burgers}}
    {{#unless devoured}}
        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
        data-newDevoured="{{devour}}"></button>
        <hr>
    {{/unless}}
 {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
{{#each burgers}}
    {{#if devoured}}
        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
        data-newDevoured="{{devour}}"></button>
        <hr>
    {{/if}}
{{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="add">burger Name:</label>
    <input type="text" id="add" name="name">
  </div>
  
  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Eaten
  </div>
  <button type="submit">Add Burger</button>
</form>
