<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-lg-2">
    <h2>Burgers not eaten yet!</h2>
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}">Devour</button>
                <hr>
            {{/unless}}
        {{/each}}
    </ul>
    </div>
    <div class="col-md-auto">
      <img src="https://cdn.shopify.com/s/files/1/1529/1387/products/Z1103-Best_Burger_In_Town_Neon_Sign_For_Restaurant_Bar_Food_Real_Neon_Light_1024x1024.jpg?v=1545281342" style="width:200px;height:200px;">
    </div>
    <div class="col col-lg-2">
      <h2>Burgers eaten!</h2>
        <ul>
        {{#each burgers}}
            {{#if devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}"></button>
                <hr>
            {{/if}}
        {{/each}}
        </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-auto">
      <h2>Add a burger</h2>
      <form class="create-form">
        <div class="form-group">
            <label for="add">Burger Name:</label>
            <input type="text" id="add" name="name">
        </div>

    <div class="form-group">
        <label for="devoured">Eaten?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Eaten
    </div>
  <button type="submit">Add Burger</button>
    </form>
</div>
